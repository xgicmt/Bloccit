<h1>Create Summary</h1>

<div class="row">
  <div class="col-md-4">
    <p>Included for Reference</p>
    <ul>
      <li>Cause I'm learning.</li>
      <li>Slowly</li>
      <li>But surely</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for [@post, @summary] do |f| %>
    <div class="form-group">
      <%= f.label :summary %>
      <%= f.text_area :summary, rows: 8, class: 'form-control', placeholder: "Enter Summary for Post" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>
  </div>
</div>
