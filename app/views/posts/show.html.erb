<h1><%= @post.title %></h1>
<h3><%= @post.summary.summary %></h3>
<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success' %>
      <%= link_to "Add Summary", new_post_summary_path(@post), class: 'btn btn-success' %>
    <%end %>
  </div>

<p><%= @post.body %></p>